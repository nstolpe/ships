{
  "name": "canvas-ship",
  "version": "0.0.1",
  "description": "A canvas ship game",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-static-spritesheets": "cp source/static/spritesheets/* source/server/.static/assets/spritesheets/",
    "build-static-images": "cp source/static/images/* source/server/.static/assets/images/",
    "watch-static-spritesheets": "nodemon -e json,png -w source/static/spritesheets -x 'npm run build-static-spritesheets'",
    "watch-static-images": "nodemon -e jpg,gif,png -w source/static/images -x 'npm run build-static-images'",
    "watch-server": "cd source/server && nodemon -e js -w ./ server.js",
    "compile-scripts": "for js in source/static/js/*.js; do browserify \"$js\" -o source/server/.static/assets/js/$(basename \"$js\"); done",
    "start": "bin/setup.sh && npm run build-static-images && npm run compile-scripts && node bin/watch.js & npm run watch-server",
    "stop": "echo \"Thus just stopped\""
  },
  "author": "nils",
  "license": "ISC",
  "dependencies": {
    "express": "^4.14.0",
    "express-handlebars": "^3.0.0",
    "pixi.js": "^4.3.5",
    "mathjs": "^3.13.3"
  },
  "devDependencies": {
    "chokidar": "^1.6.1"
  }
}
